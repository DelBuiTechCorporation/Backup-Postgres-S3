# Exemplo de arquivo .env para pg-bkp
# Copie para .env e ajuste os valores antes de rodar

# Conexões Postgres (obrigatório)
# Formato simples:
# PG_URLS=postgres://user:pass@host:5432/postgres
# Exemplo com metadados (prefix, bucket, db_buckets etc):
PG_URLS=conn1@db_buckets=prod=prod-backups,other=other-backups@postgres://backup_user:backup_pass@dbhost:5432/postgres

# --- S3 (global fallback) ---
S3_ENDPOINT=
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=your-default-bucket
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# Prefixo global para chaves no bucket (opcional)
GLOBAL_PREFIX=

# Retenção (dias calendariais). 1 = mantém apenas o dia atual
RETENTION_DAYS=7

# Cron / timezone
CRON_ENABLED=true
CRON_SCHEDULE=0 3 * * *
TIMEZONE=America/Sao_Paulo

# Ignorar bancos (vírgula separado)
IGNORE_DATABASES=postgres,template0

# Verbosidade de logs (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Force terminate sessions after backup (true/false)
FORCE_TERMINATE_AFTER_BACKUP=false

# Compressão ZIP (0-9, onde 9 é máxima compressão)
ZIP_COMPRESSION_LEVEL=6

# Diretório para arquivos temporários (use volume mapeado)
TEMP_DIR=/tmp
